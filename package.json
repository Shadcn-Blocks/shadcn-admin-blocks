{
  "name": "shadcn-repository",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "storybook": "storybook dev",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build-storybook": "storybook build",
    "build-registry": "shadcn build",
    "deploy-gh": "pnpm prepare-gh-pages && gh-pages -d gh-pages",
    "prepare-gh-pages": "rm -rf gh-pages && mkdir gh-pages && pnpm build-storybook && mv storybook-static gh-pages/storybook && pnpm build-registry && pnpm move-shadcn",
    "move-shadcn": "mkdir -p gh-pages/r && mv public/r/* gh-pages/r/ && rm -r public/r"
  },
